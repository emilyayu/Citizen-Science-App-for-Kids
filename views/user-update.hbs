<html>
<head>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="./js/user_helper.js"></script>
<title>Students</title>


{{!-- Breadcrumb Navigation Bar --}}
</head>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/users">Users</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit User</li>
  </ol>
</nav>

  <h2>Edit Student</h2>
      <table id = "student-table">
    
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>

        </tr>
    </thead>

    <tbody>
        {{#each userData}}
        <tr data-value={{this.IDUser}}>
            <td>{{this.IDUser}}</td>
            <td>{{this.FirstName}}</td>
            <td>{{this.LastName}}</td>
            <td>{{this.Email}}</td>
        </tr>
        {{/each}}
    </tbody>
    </table>

    <p></p>
  {{#each userData}}
  <form id = "edit-student" method = "POST" action = "/users/{{this.IDUser}}">


      <fieldset class="fields">
          <p></p>

          <label for="FirstName"> First Name </label> 
          <input type="text" name="FirstName" id="FirstName" value = {{this.FirstName}}>
          <label> Last Name </label>
          <input type="text" name="LastName" id="LastName" value = {{this.LastName}}> 
           <label> Email </label>
          <input type="text" name="Email" id="Email" value = {{this.Email}}> 
          <input type="hidden" name="IsTeacher" value = 0>
          <p></p>
          <div>
            <button>Submit</button>
            {{!-- <button onclick="location.href='/users'">Cancel</button> --}}
          </div>
       </fieldset>
  </form>
    {{/each}}

   
  </div> 