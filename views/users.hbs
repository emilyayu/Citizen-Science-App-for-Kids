<!-- users.hbs-->
<!--
Uses as a model the example from CS340 Canvas Modules
-->
<div class="container-fluid ">
  <!-- Add a new Student to the Database -->
  
  <div class="row justify-content-center rounded m-5 px-5 py-3" style="background-color: #eeeeee; width: 75%;">
    <h1>Enroll a Student.</h1>
  
    {{#if message}}
    <div style="text-align: center" class="alert alert-{{message.type}}">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>{{message.intro}}</strong> {{message.message}}
    </div>
    {{/if}}
  
    <label class="form-label mt-4" for="FirstName"> First Name </label>
    <input class="form-control" type="text" name="FirstName" id="FirstName" placeholder="Enter First Name">
    <div id="project-name-err" style="color: red; display: none;">Please provide a valid first name.</div>
  
    <label class="form-label mt-4"> Last Name </label>
    <input class="form-control" type="text" name="LastName" id="LastName" placeholder="Enter Last Name">
    <div id="project-name-err" style="color: red; display: none;">Please provide a valid last name.</div>
  
    <label class="form-label mt-4"> Email </label>
    <input class="form-control" type="email" name="Email" id="Email" placeholder="Enter Student's Email">
    <div id="project-name-err" style="color: red; display: none;">Please provide a valid email.</div>
  
    <input type="hidden" name="IsTeacher" id="IsTeacher" value=0>
  
    <div>
      <button class="btn btn-md btn-dark rounded-pill mt-4 px-5" id="addStudentBtn">Submit</button>
    </div>
  
  
  </div>
  <div class="row justify-content-center m-5">
    <table class="table table-striped" id="student-table">
  
      <thead>
        <tr>
          {{!-- <th scope="col">Student ID</th> --}}
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>

      <tbody>
        {{#each userData}}
        <tr data-value={{this.IDUser}}>
          {{!-- <th scope="row">{{this.IDUser}}</td> --}}
          <td>{{this.FirstName}}</td>
          <td>{{this.LastName}}</td>
          <td>{{this.Email}}</td>
          <td><a href="/users/{{this.IDUser}}" type="button"><i class="fa fa-edit"></i></a></td>
          <td><button class="btn btn-dark rounded-pill trash" onclick="deleteUserJS({{this.IDUser}})"><i class="fa fa-trash-o"></i></button>
          </td>

        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
{{!-- must stay in this order --}}
<script src="/js/validation.helpers.js"></script>
<script  src="/js/users.helpers.js"></script>
